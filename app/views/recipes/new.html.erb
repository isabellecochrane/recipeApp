<h1>New Recipe</h1>

<%= form_with model: @recipe do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @recipe.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :recipe %><br>
    <%= form.text_area :recipe %>
    <% @recipe.errors.full_messages_for(:recipe).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
